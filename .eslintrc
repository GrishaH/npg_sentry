{
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "node": true
  },
  "rules": {
    "curly": [2, "all"],
    "dot-location": [2, "property"],
    "dot-notation": 2,
    "eqeqeq": 2,
    "no-eq-null": 2,
    "no-eval": 2,
    "no-global-assign": 2,
    "no-implicit-coercion": 2,
    "no-implicit-globals": 2,
    "no-implied-eval": 2,
    "no-labels": 2,
    "no-loop-func": 2,
    "no-return-assign": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-unmodified-loop-condition": 2,
    "no-unused-expressions": 2,
    "no-useless-escape": 2,
    "no-useless-return": 2,
    "yoda": 2,
    "strict": 2,
    "no-catch-shadow": 2,
    "no-delete-var": 2,
    "no-shadow": 2,
    "no-undef": 2,
    "no-undef-init": 2,
    "no-unused-vars": 2,
    "no-use-before-define": 2,
    "array-bracket-spacing": 2,
    "brace-style": 2,
    "comma-dangle": 0,
    "comma-spacing": 2,
    "comma-style": 2,
    "computed-property-spacing": 2,
    "eol-last": 2,
    "func-call-spacing": 2,
    "indent": [2, 2],
    "linebreak-style": [2, "unix"],
    "max-len": [2, 80],
    "newline-per-chained-call": [2, {"ignoreChainWithDepth": 3}],
    "no-tabs": 2,
    "no-trailing-spaces": 2,
    "one-var": [2, "never"],
    "quotes": [2, "single", {"avoidEscape": true, "allowTemplateLiterals": true}],
    "semi": 2,
    "semi-spacing": [2, {"before": false, "after": true}],
    "no-var": 2,
  },
  "globals": {
    "Promise": true,
  }
}
